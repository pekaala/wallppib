{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++11",
        "main.cpp",
        "wallpaperengine.cpp",
        "-o",
        "build/wallppib",
        "-I/usr/include/gtkmm-3.0",
        "-I/usr/include/c++/7",
        "-I/usr/include/gtk-3.0",
        "`pkg-config --libs gtkmm-3.0`"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Compile with g++"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
